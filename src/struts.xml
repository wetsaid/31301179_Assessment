<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <!-- 将action托管给spring -->
    <constant name="struts.objectFactory" value="spring"/>
    <package name="struts" extends="struts-default">
        <action name="user" class="userAction"/>
        <action name="index" class="indexAction"/>
        <action name="blog" class="blogAction"/>

        <!--分割线-->
        <action name="base" class="baseAction"/>
        <action name="teacher" class="teacherAction"/>
        <action name="student" class="studentAction"/>
        <action name="systemUser" class="systemUserAction"/>
        <action name="course" class="courseAction"/>
        <action name="chooseCourse" class="chooseCourseAction"/>

    </package>
</struts>
